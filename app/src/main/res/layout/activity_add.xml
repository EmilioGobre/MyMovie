<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".add"
    android:background="#790252">

    <include android:id="@+id/bar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTitulo_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="Nueva Pelicula"
        android:background="@drawable/titlecolor"
        android:textColor="#C147E9"
        />
    <ImageView
        android:id="@+id/Imagen_add"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/btnselect_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3B185F"
        android:layout_margin="10dp"
        android:textColor="#863A6F"
        android:text="Seleccione su Imagen"/>
    <EditText
        android:id="@+id/etnombre_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#9035AE"
        android:textSize="20dp"
        android:textColor="#C147E9"
        android:layout_margin="5dp"
        android:hint="Nombre de la pelicula"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp">

        <EditText
            android:id="@+id/ethorario_add"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Fecha de salida"
            android:inputType="date"
            android:textColor="#C147E9"
            android:textColorHint="#9035AE"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnfecha_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginVertical="3dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#000000FF"
            android:src="@drawable/monthly_calendar_svgrepo_com"
            app:tint="#2D033B" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ettickets_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:textSize="20dp"
        android:textColorHint="#9035AE"
        android:textColor="#C147E9"
        android:inputType="numberDecimal"
        android:hint="Tu calificacion"/>
    <EditText
        android:id="@+id/etprecio_add"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:textColorHint="#9035AE"
        android:textColor="#C147E9"
        android:inputType="number"
        android:hint="Calificacion de Rotten"/>
    <Spinner
        android:id="@+id/spclasificacion_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColorHint="#9035AE"
        android:textColor="#C147E9"
        android:hint="Clasificacion"/>
    <Button
        android:id="@+id/button_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="AÃ±adir"
        android:backgroundTint="#810CA8"
        android:textColor="#E5B8F4"
        android:layout_gravity="center"
        android:layout_margin="5sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>