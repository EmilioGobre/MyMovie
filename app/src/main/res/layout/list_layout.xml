<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#570A57"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_card"
                android:layout_width="300px"
                android:layout_height="300px"
                android:background="@drawable/imagecolor"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/tvNombre_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#A91079"
                android:ems="10"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/imageView_card"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="5dp"
                android:text="Titulo"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvHorario_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNombre_card"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="#A91079"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView_card"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Horario"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvClasificacion_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="5dp"
                android:textColor="#A91079"
                android:layout_toEndOf="@+id/imageView_card"
                android:layout_below="@+id/tvHorario_card"
                android:textStyle="italic"
                android:textSize="20sp"
                android:ems="10"
                android:text="Clasificacion"
                android:inputType="textPersonName"
                />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>